{
  "name": "esports-daily-frontend",
  "version": "1.0.0",
  "description": "frontend of esports daily",
  "main": "index.js",
  "scripts": {
    "dev": "next -p 7777",
    "build": "next build",
    "start": "next start",
    "test": "NODE_ENV=test jest --watch",
    "test-win": "SET NODE_ENV=test&& jest --watch",
    "heroku-postbuild": "next build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jcolborn-dropdeadgames/esports-daily.git%22.git"
  },
  "author": "Jacob Colborn",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jcolborn-dropdeadgames/esports-daily.git%22/issues"
  },
  "homepage": "https://github.com/jcolborn-dropdeadgames/esports-daily.git%22#readme",
  "dependencies": {
    "apollo-boost": "^0.4.3",
    "apollo-client": "^2.6.3",
    "babel-core": "^6.26.3",
    "babel-plugin-styled-components": "^1.10.2",
    "date-fns": "^1.30.1",
    "downshift": "^3.2.10",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "graphql": "^14.3.1",
    "graphql-tag": "^2.10.1",
    "lodash.debounce": "^4.0.8",
    "next": "^11.1.0",
    "next-with-apollo": "^4.3.0",
    "nprogress": "^0.2.0",
    "prop-types": "^15.7.2",
    "react": "^16.8.6",
    "react-adopt": "^0.6.0",
    "react-apollo": "^2.5.8",
    "react-dom": "^16.8.6",
    "react-markdown": "^4.2.2",
    "react-stripe-checkout": "^2.6.3",
    "react-transition-group": "^4.1.1",
    "styled-components": "^3.4.9",
    "waait": "^1.0.5"
  },
  "devDependencies": {
    "babel-jest": "^24.8.0",
    "babel-plugin-module-resolver": "^3.2.0",
    "casual": "^1.6.2",
    "enzyme-to-json": "^3.3.5",
    "graphql-tools": "^4.0.5",
    "jest": "^24.8.0",
    "jest-transform-graphql": "^2.1.0"
  },
  "jest": {
    "setupTestFrameworkScriptFile": "<rootDir>/jest.setup.js",
    "testPathIgnorePatterns": [
      "<rootDir>/.next/",
      "<rootDir>/node_modules/"
    ],
    "transform": {
      "\\.(gql|graphql)$": "jest-transform-graphql",
      ".*": "babel-jest",
      "^.+\\.js?$": "babel-jest"
    }
  },
  "//": "This is our babel config, I prefer this over .babelrc file",
  "babel": {
    "env": {
      "development": {
        "presets": [
          "next/babel"
        ],
        "plugins": [
          [
            "styled-components",
            {
              "ssr": true,
              "displayName": true
            }
          ]
        ]
      },
      "production": {
        "presets": [
          "next/babel"
        ],
        "plugins": [
          [
            "styled-components",
            {
              "ssr": true,
              "displayName": true
            }
          ]
        ]
      },
      "test": {
        "presets": [
          [
            "next/bable",
            {
              "preset-env": {
                "modules": "commonjs"
              }
            }
          ]
        ],
        "plugins": [
          [
            "styled-components",
            {
              "ssr": true,
              "displayName": true
            }
          ]
        ]
      }
    }
  }
}
